algoritmo "contanegativos"
var
   n,nn: inteiro
   r: caractere
inicio
nn <- 0
Repita
      Escreva("Digite um numero: ")
      Leia(n)
             Se(n<0) entao
                     nn<-nn+1
             FimSe
      Escreva("Quer continuar? [s/n]")
      Leia(r)

Ate (r="n")
Escreva("VocÃª digitou ", nn, " numeros negativos.")
fimalgoritmo
