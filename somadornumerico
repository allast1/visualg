algoritmo "somadornumerico"
var
   contador, n, soma, maior: inteiro
inicio
      soma <- 0
      contador <- 1
      Enquanto (contador<=5) faca
               Escreva("Digite o ", contador, "o valor: ")
               Leia(n)
               Se (n>maior) entao
                  maior <-  n
               FimSe
               soma <- soma + n
               contador <- contador+1
      FimEnquanto
      Escreval("A soma de todos os valores foi ", soma)
fimalgoritmo
